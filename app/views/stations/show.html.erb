<h1><%= @station.name %></h1>
<%if current_admin?%>
<h2><%=link_to 'Delete',  admin_station_path(@station), method: :delete%></h2>
<h2><%=link_to 'Edit',  edit_admin_station_path(@station)%></h2>
<%end%>

<section><h2>Dock count:</h2><h3> <%= @station.dock_count %></h3></section>
<section><h2>City:</h2><h3><%= @station.city %></h3></section>
<section><h2>Install date:</h2><h3><%= @station.installation_date %></h3></section>

<%if current_user %>
<h3>Rides started here: <%= @started_here %></h3>
<h3>Rides ended here: <%= @ended_here %></h3>
<h3>Most frequent destination: <%= @frequent_destination %></h3>
<h3>Most frequent origination: <%= @frequent_origination %></h3>
<h3>Date with the most rides started: <%= @most_rides_started %></h3>
<% end %>