<h1>All Trips</h1>
<% if current_admin? %>
<h1><%=link_to 'Create New Trip', new_admin_trip_path %></h1>
<% end %>

<%= will_paginate %>
<table>
  <tr>
    <th>ID</th>
    <th>Duration</th>
    <th>Start Date</th>
    <th>Start Station</th>
    <th>End Date</th>
    <th>End Station</th>
    <th>Bike ID</th>
    <th>Subscription</th>
    <th>Zip Code</th>
    <% if current_admin? %>
    <th></th>
    <th></th>
    <% end %>
  </tr>
  <% @trips.each do |trip| %>
  <tr>
    <td><%= link_to trip.id, trip_path(trip) %></td>
    <td><%= trip.duration %></td>
    <td><%= trip.start_date %></td>
    <td><%= trip.start_station.name %></td>
    <td><%= trip.end_date %></td>
    <td><%= trip.end_station.name %></td>
    <td><%= trip.bike_id %></td>
    <td><%= trip.subscription_type %></td>
    <td><%= trip.zip_code %></td>
    <% if current_admin? %>
    <td><%= button_to 'Edit', edit_admin_trip_path(trip), method: :get %></td>
    <td><%= button_to 'Delete', admin_trip_path(trip), method: :delete%></td>
    <% end %>
  </tr>
  <% end %>
