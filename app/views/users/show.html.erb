<main>
  <h1>Hello <%= @user.name %></h1>
  <h3><%= link_to "Edit Info", edit_user_path(@user) %></h3>

  <div class='show-display'>
    <section>
      <h2>Email:</h2>
      <h3><%= @user.email %></h3>
    </section>
    <section>
      <h2>Address:</h2>
      <h3><%= @user.address %></h3>
    </section>

  </div>

  <table>
    <h2> Your Orders </h2>
    <tr>
      <th>Order ID</th>
      <th>Total Price</th>
      <th>Status</th>
      <th>Order Date</th>
    </tr>
    <% @order.each do |order| %>
    <tr>
      <td><%= link_to order.id, order_path(order) %></td>
      <td><%= order.cost %></td>
      <td><%= order.status %></td>
      <td><%= order.created_at %></td>
    </tr>
    <% end %>
  </table>

  <%if current_admin? %>
  <div class='show-display'>
    <section>
      <h2> Total Orders With Ordered Status:</h2>
      <h3><%=@total_ordered%></h3>
    </section>
    <section>
      <h2>Total Orders With Paid Status:</h2>
      <h3><%=@total_paid%></h3>
    </section>
    <section>
      <h2>Total Orders With Cancelled Status:</h2>
      <h3><%=@total_cancelled%></h3>
    </section>
    <section>
      <h2>Total Orders With Completed Status:</h2>
      <h3><%=@total_completed%></h3>
    </section>
  </div>

  <div class='admin-order-buttons'>
    <%= link_to 'Ordered', user_path(current_user, status: 'ordered'), class: 'ordered' %>
    <%= link_to 'Completed', user_path(current_user, status: 'completed'), class: 'completed' %>
    <%= link_to 'Paid', user_path(current_user, status: 'paid'), class: 'paid' %>
    <%= link_to 'Cancelled', user_path(current_user, status: 'cancelled'), class: 'cancelled' %>
  <%= link_to 'All Orders', user_path(current_user), class: 'all-orders' %>
  </div>
    <table class='orders-table'>
      <h2><%=@header%></h2>
      <tr>
        <th>Order ID</th>
        <th>Total Price</th>
        <th>Status</th>
        <th>Order Date</th>
        <th></th>
      </tr>
      <% @all_orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order) %></td>
        <td><%= order.cost %></td>
        <td><%= order.status %></td>
        <td><%= order.created_at %></td>
        <%if order.status =='paid' || order.status == 'ordered' %>
        <td><%= button_to 'Cancel', admin_order_path(order, status: 'cancelled'), method: :put %></td>
        <%end%>
        <%if order.status == 'ordered' %>
        <td><%= button_to 'Mark as Paid', admin_order_path(order, status: 'paid'), method: :put %></td>
        <%end%>
        <%if order.status == 'paid' %>
        <td><%= button_to 'Mark as Completed', admin_order_path(order, status: 'completed'), method: :put %></td>
        <%end%>
      </tr>
      <% end %>
    </table>
  <%end%>
</main>
