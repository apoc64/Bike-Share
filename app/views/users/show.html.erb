<main>
  <h1>Hello <%= @user.name %></h1>
  <h3><%= link_to "Edit Info", edit_user_path(@user) %></h3>

  <article>
    <section>
      <h2>Email:</h2>
      <h3><%= @user.email %></h3>
    </section>
    <section>
      <h2>Address:</h2>
      <h3><%= @user.address %></h3>
    </section>

  </article>

  <table>
    <tr>
      <th>Order ID</th>
      <th>Total Price</th>
      <th>Status</th>
      <th>Order Date</th>
    </tr>
    <% @user.orders.each do |order| %>
    <tr>
      <td><%= link_to order.id, order_path(order) %></td>
      <td><%= order.cost %></td>
      <td><%= order.status %></td>
      <td><%= order.created_at %></td>
    </tr>
    <% end %>
  </table>

</main>
