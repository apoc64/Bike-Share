<main>
  <h1>Sign Up</h1>

  <article>
    <%= form_for @user do |f| %>
    <section>
      <h2>Full Name:</h2>
      <%= f.text_field :name %>
    </section>
    <section>
      <h2>Email:</h2>
      <%= f.text_field :email %>
    </section>
    <section>
      <h2>Password:</h2>
      <%= f.text_field :password %>
    </section>
    <section>
      <h2>Address:</h2>
      <%= f.text_field :address %>
    </section>
    <%= f.submit %>
    <% end %>
  </article>

</main>
