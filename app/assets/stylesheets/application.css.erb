
body {
  font-family: ariel, sans-serif;
  font-size: 12pt;
  margin: 0;
  background: burlywood;
}

nav {
  background-color: darkblue;
  color: white;
  font-size: 1.2em;
  padding: .5em;
}
nav a {
  color: white;
  padding: .5em;
  text-decoration: none;
}
nav a:hover {
  color: yellow;
}

main {
  padding: 0em, 1em, 0, 1em;
}
h1 {
  text-align: center;
}

article {
  display: flex;
}
article form {
  margin-left: auto;
  margin-right: auto;
  width: 80%;
}
article section {
  width: 500px;
  margin-left: auto;
  margin-right: auto;
  height: 2.5em;
  padding: .5em;
  align-content: space-around;
}
article section h2 {
  padding: .5em;
  margin: 0px;
  width: 225px;
  float: left;
  text-align: right;
}
article section h3 {
  padding: .5em;
  margin: 0px;
  width: 225px;
  float: right;
  text-align: left;
}

h3 {
  text-align: center;
}

a {
  text-decoration: none;
}

.accessories {
  width: 95%;
  margin-left: auto;
  margin-right: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.accessories p {
  text-align: center;
  color: black;
}
.accessories section {
  padding: 1rem;
  width: 250px;
}
.accessories h2 {
  text-align: center;
  margin-bottom: .2em;
}
.accessories img {
  width: 100%;
}

.crementers {
  margin-top: -.7em;
  display: flex;
  justify-content: center;
}
.crementers input {
  width: 40px;
  height: 25px;
  border: none;
  font-size: 1em;
}
.inc {
  background-color: darkblue;
  color: white;
}
.dec {
  background-color: darkred;
  color: white;
}
.inc:hover {
  background-color: blue;
}
.dec:hover {
  background-color: red;
}


.med-image {
  height: 175px;
  display: flex;
  align-items: center;
}

.admin-buttons {
  margin-top: .5em;
  display: flex;
  justify-content: space-around;
}
.admin-buttons form {
  width: 35%;
}
.admin-buttons form input {
  padding: .2em;
  width: 100%;
  border: none;
  color: white;
  font-size: .8em;
}

.edit-button {
  padding: .5em;
  border-radius: 10px;
  background-color: darkorange;
}
.edit-button:hover {
  background-color: orange;
}
.delete-button {
  padding: .5em;
  border-radius: 10px;
  color: white;
  background-color: darkred;
}
.delete-button:hover {
  background-color: red;
}
.add-button {
  border-radius: 10px;
  border: none;
  background-color: darkgreen;
  color: white;
}
.add-button:hover {
  background-color: green;
}

h3 input {
  padding: .2em;
  width: 80%;
  font-size: .8em;
}

.show-display {
  margin-left: auto;
  margin-right: auto;
  width: 720px;
}
.show-display section {
  height: 2.5em;
  padding: 0;
}
.show-display section h2 {
  padding: .5em;
  margin: 0px;
  width: 340px;
  float: left;
  text-align: right;
  font-size: 1.2em;
}
.show-display section h3 {
  padding: .5em;
  margin: 0px;
  width: 340px;
  float: right;
  text-align: left;
  font-size: 1.2em;
}
.show-display img {
  width: 100%;
}
.show-display p {
  text-align: center;
}

.admin-order-buttons {
  width: 600px;
  margin-left: auto;
  margin-right: auto;
  margin-top: 1em;
}
.admin-order-buttons a {
  margin: .3em;
  padding: .3em;
  color: white;
}
.ordered {
  border-radius: 10px;
  background-color: darkgreen;
}
.completed {
  border-radius: 10px;
  background-color: darkorange;
}
.paid {
  border-radius: 10px;
  background-color: darkblue;
}
.cancelled {
  border-radius: 10px;
  background-color: darkred;
}
.all-orders {
  border-radius: 10px;
  background-color: darkgreen;
}
.ordered:hover {
  background-color: green;
}
.completed:hover {
  background-color: orange;
}
.paid:hover {
  background-color: blue;
}
.cancelled:hover {
  background-color: red;
}
.all-orders:hover {
  background-color: green;
}

hr {
  height: 12px;
  border: 0;
  box-shadow: inset 0 12px 12px -12px rgba(0, 0, 0, 0.5);
}

img {
  border-radius: 5px;
}

td  {
  font-size: 20px;
}

.pagination {
  font-size: larger;
}

.homepage {
  background: url(<%=asset_path('bicycles.jpg')%>);
  background-size: cover;
}

.create-account a{
  color: white;
  font-size: 25px;
  text-shadow: 4px 2px mediumvioletred;
}

.homepage-name {
  font-size: 100px;
  color: aliceblue;
  font-family: fantasy;
  text-shadow: 5px 1px red;
}
